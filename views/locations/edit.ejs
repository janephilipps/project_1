<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <header>
      <% include ../partials/header %>
    </header>
    <div class="page-wrap">
      <div class="container">
        <h1>Edit <%= result.zip %></h1>
        <form action="/locations/<%= id %>?_method=PUT" method="POST">
          <input type="text" name="zip" placeholder="New Zip Code">
          <button type="submit">Submit</button>
        </form>
        <div>
          <p>*US 5-digit zip codes only!</p>
        </div>
        <br>
      </div>
    </div>
    <footer>
      <% include ../partials/footer %>
    </footer>
  </body>
</html>
